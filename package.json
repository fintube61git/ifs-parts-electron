{
  "name": "ifs-parts-electron",
  "version": "1.0.0",
  "description": "IFS Parts Application - Electron Desktop App",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "npx electron-forge make"
  },
  "keywords": [
    "electron",
    "ifs",
    "parts"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^28.2.2",
    "electron-builder": "^24.9.1",
    "@electron-forge/cli": "^6.4.2"
  },
  "build": {
    "appId": "IFS Parts by Existenz",
    "productName": "IFS Parts",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "package.json",
      "src/",
      "data/",
      "images/"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage",
      "icon": "src/Icons"
    }
  },
  "dependencies": {}
}
